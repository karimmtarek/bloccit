.row
  .col-md-12
    %h1= markdown(@post.title)
    -# %h1= @post.markdown_title
    %ol.breadcrumb
      %li= link_to 'Home', root_path
      %li= link_to 'Topics', topics_path
      %li= link_to @post.topic.name, '/topics/' + params[:topic_id]
      %li.active= @post.title
.row
  .col-md-8
    %small
      - if current_user
        = image_tag(current_user.avatar.tiny.url) if current_user.avatar?
      submitted #{time_ago_in_words(@post.created_at)} ago by #{@post.user.name}
    = image_tag(@post.image.url, class: 'thumbnail') if @post.image?
    %p= markdown(@post.body)
    -# %p= @post.markdown_body
    %div
      - if current_user
        = render partial: 'comments/form', locals: { topic: @topic, post: @post }
    %h3
      Comments
      %span.badge= @comments.count
    %hr
    = render @comments

  .col-md-2
    - if policy(@post).edit?
      = link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success'
  .col-md-2
    - if policy(@post).destroy?
      = link_to "Delete Post", [@topic, @post] ,method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'}