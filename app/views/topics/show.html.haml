.row
  .col-md-12
    %h1= markdown(@topic.name)
.row
  .col-md-8
    %ol.breadcrumb
      %li= link_to 'Home', root_path
      %li= link_to 'Topics', topics_path
      %li.active= @topic.name
  .col-md-2
    - if policy(@topic).update?
      = link_to "Edit Topic", edit_topic_path, class: 'btn btn-success'
  .col-md-2
    - if policy(@topic).destroy?
      = link_to "Delete Topic", @topic ,method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this  topic?'}
.row
  .col-md-12
    %p{:class => "lead"}= @topic.description

.row.topic-posts
  .col-md-10
    - @posts.each do |post|
      .media
        .media-body
          %h4{:class => "media-heading"}
            = image_tag(post.image.thumb.url, class: 'thumbnail') if post.image?
            = link_to markdown(post.title), [@topic, post]
          %small
            - if current_user
              = image_tag(current_user.avatar.tiny.url) if current_user.avatar?
            submitted #{time_ago_in_words(post.created_at)} ago by #{post.user.name}
            %br/
            = post.comments.count
            Comments
    = will_paginate @posts
  .col-md-2
    - if policy(Post.new).create?
      = link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success'
