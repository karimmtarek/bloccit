.media{:id => "comment-#{comment.id}"}
  = link_to '#', class: 'pull-left' do
    = image_tag(comment.user.avatar.small.url) if comment.user.avatar?
  .media-body
    %small
      = comment.user.name
      commented
      = time_ago_in_words(comment.created_at)
      ago
      - if policy(comment).destroy?
        |
        = link_to "Delete", [@post, comment], method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}
    %br
    = comment.body
    %hr