= form_for [post, comment], remote: true do |f|
  - if comment.errors.any?
    .alert.alert-danger
      %h4 There are #{pluralize(comment.errors.count, "error")}.
      %ul
        - comment.errors.full_messages.each do |msg|
          %li= msg
  .form-group{ :class => (error_class(comment.errors[:body])) }
    %h2.page-header Add a Comment
    = f.label :body
    = f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter comment body"
  .form-group
    = f.submit "Post comment", class: 'btn btn-success'